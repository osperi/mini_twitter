<p id="notice"><%= notice %></p>

<p>
  <strong>Id:</strong>
  <%= @user.id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Posts:</strong>
  <table>
    <thead>
    	<tr>
    	  <th>Id</th>
    	  <th>Content</th>
    	  <th colspan="3"></th>
    	</tr>
    </thead>
    <tbody>
    <% @user.micropost.each do |micropost| %>
      <tr>
        <td><%= micropost.id %></td>
        <td><%= micropost.content %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	</tbody>
  </table>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
