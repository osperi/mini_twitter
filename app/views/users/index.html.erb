<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td id="id_<%= user.id %>"><%= user.id %></td>
        <td id="name_<%= user.id %>"><%= user.name %></td>
        <td id="email_<%= user.id %>"><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Show popup', "javascript:show_user(#{user.id})" %></td>
        <td><%= link_to 'Show posts', "javascript:show_user_posts(#{user.id})" %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Edit popup', "javascript:edit_user(#{user.id})" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<div id="show" style="display:none">
	<p>
		<strong>Name:</strong>
		<p id="name"></p>
	</p>
	<p>
		<strong>Email:</strong>
		<p id="email"></p>
	</p>
	<p id="pPosts">
		<strong>Posts:</strong>
    <table id="tablePosts"><thead><tr><th>Id</th><th>Content</th></tr></thead>
      <tbody id="bodyPosts"></tbody>
    </table>
	</p>
</div>

<div id="edit" style="display:none">
</div>
